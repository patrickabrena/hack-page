
pipeline {
    agent any
    
    environment {
        SSH_KEY = credentials('2f338a04-1f29-42e8-9ff9-03add894c545') // Refer to your SSH credentials in Jenkins
        SSH_KEY_FILE = '/root/.ssh/id_rsa' // Specify the path to your SSH key file
