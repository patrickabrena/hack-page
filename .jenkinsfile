pipeline {
    agent any
    stages {

        stage("Delete existing hack-page directory") {
            steps {
             
             sh 'rm -rf /var/www/html/hack-page'
           }
        }

        stage("Build") {
            steps {
             
             sh 'sudo git clone git@github.com:patrickabrena/hack-page.git /var/www/html/'
           }
        }
    }
}

// 2 steps. 1st is to delete the current hack-page directory recursively and then 2nd is to git clone the remote repo into /var/www/html



