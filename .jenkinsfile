pipeline {
    agent any

    stages {
    
        stage('Clone Repository') {
            steps {
                script {
                    def directoryPath = '/var/www/html'
                    def repoURL = 'git@github.com:patrickabrena/hack-page.git'

                    // Check if the directory is empty
                    def isDirectoryEmpty = fileExists(directoryPath) && readFile(directoryPath).trim() == ''
                    
                    // If the directory is empty, clone the repository
                    if (isDirectoryEmpty) {
                        sh "git clone $repoURL /var/www/html"
                    } else {
                        // If the directory is not empty, remove the current version and clone the repository
                        sh "rm -rf /var/www/html/*"
                        sh "git clone $repoURL /var/www/html"
                }
            }
        }
    }
}
}

