
pipeline {
    agent any

    
    stages {
        stage("Git Checkout") {
            steps {
            git branch: 'main', credentialsId: '2f338a04-1f29-42e8-9ff9-03add894c545', url: 'https://github.com/patrickabrena/hack-page.git'
            }
        }
        
        stage("Secure Copy from Local to Remote") {
            steps {
                // 
                script {
                    // Ensure the /var/www/html directory is a git repository
                    sh '''
                        sudo su -c "
                        if [ ! -d /var/www/html/.git ]; then
                            git clone https://github.com/patrickabrena/hack-page.git /var/www/html
                        fi
                        cd /var/www/html
                        git reset --hard HEAD{0}
                        git pull origin main
                        "
                    '''
                }

            }
        }
    }
    
    
    
}



