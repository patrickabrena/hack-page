pipeline {
    agent any

    stages {
        stage('Set Permissiions') {
            steps {
                //change ownership of directory
                sh 'sudo chown -R jenkins_user:jenkins_group /var/www/html'
            }
        }

        stage('Clone Repository') {
            steps {
                // Debugging step: list files before removal
                sh 'ls -la /var/www/html'
                
                // Remove existing contents of the directory
                sh 'sudo rm -rf /var/www/html/'

                // Debugging step: list files after removal
                sh 'ls -la /var/www/'
                
                // Clone the repository
                sh 'git clone https://github.com/patrickabrena/hack-page.git /var/www/html'
            }
        }
    }
}

